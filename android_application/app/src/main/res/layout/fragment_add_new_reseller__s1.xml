<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="info"
            type="com.hbworks.eu.bkashbd.view.activity.reports.ReportViewModel.AddResellerRequest" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.reports.ResellersList">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/md_nav_back"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:maxLines="1"
                android:text="Add New"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/backBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_weight="1">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toTopOf="@+id/ConfirmButton"
                app:layout_constraintVertical_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerStoreNameHold"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reseller Store Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerStoreName"
                            android:maxLines="1"
                            android:text="@{info.store_name}"
                            android:imeOptions="actionNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerCodeHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/ResellerStoreNameHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reseller Code">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerCode"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="@{info.store_code}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerNameHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/ResellerCodeHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reseller Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerName"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="@{info.store_owner_name}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerPhoneHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/ResellerNameHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerPhone"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="@{info.store_phone_number}"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerAddressHolder"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Reseller Address"
                        app:layout_constraintTop_toBottomOf="@+id/ResellerPhoneHold">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="top"
                            android:text="@{info.store_address}"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:padding="15dp"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/Divider1"
                        app:layout_constraintTop_toBottomOf="@+id/ResellerAddressHolder"
                        android:text="Web Access"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerUserNameHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/Divider1"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:hint="Reseller User Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerUserName"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="@{info.manager_user_name}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerPasswordHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/ResellerUserNameHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:hint="Reseller Password">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerPassword"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:text="@{info.manager_user_password}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ResellerTransactionPinHolder"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Reseller Transaction Pin"
                        app:layout_constraintTop_toBottomOf="@+id/ResellerPasswordHold">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ResellerTransactionPin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="@{info.transaction_pin}"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/Divider2"
                        app:layout_constraintTop_toBottomOf="@+id/ResellerTransactionPinHolder"
                        android:text="Configuration"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.hbworks.eu.bkashbd.lib.MultiTaskingDropdownSpinner
                        android:id="@+id/BaseCurrency"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/Divider2"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:label="Base Currency"
                        app:type="SINGLE_SELECTION"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/BaseCommissionHold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/BaseCurrency"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        app:endIconTint="@color/black"
                        app:endIconDrawable="@drawable/ic_percent_black_24dp"
                        android:hint="Base Commission (%)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/BaseCommission"
                            android:maxLines="1"
                            android:text="@{info.base_add_balance_commission_rate}"
                            android:inputType="numberDecimal"
                            android:imeOptions="actionNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.hbworks.eu.bkashbd.lib.MultiTaskingDropdownSpinner
                        android:id="@+id/AllowResellerCreation"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/BaseCommissionHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:label="Allow Reseller Creation"
                        app:type="SINGLE_SELECTION"/>

                    <com.hbworks.eu.bkashbd.lib.MultiTaskingDropdownSpinner
                        android:id="@+id/AllowedMFS"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/AllowResellerCreation"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:label="Allowed MFS"
                        app:type="MULTI_SELECTION"/>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.07"
                    android:text="Confirm"
                    android:duplicateParentState="true"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto_bold"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
