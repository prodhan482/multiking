<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/t1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/TheCloseButton"
            android:fontFamily="@font/roboto_medium"
            app:fontFamily="@font/roboto_medium"
            android:textColor="@color/black_1"
            android:text="Send Money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/TheCloseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_gray_close_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:minHeight="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@id/selectedMFSHolder"
            app:layout_constraintTop_toBottomOf="@id/t1" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectedMFSHolder"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/border_box_1"
            app:layout_constraintTop_toBottomOf="@id/theList"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/SelectedMfsLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:src="@drawable/ic_gray_close_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/SelectedMfsName"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/SelectedMfsLogo"
                android:text="Select a Service"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_medium"
                app:fontFamily="@font/roboto_medium"
                android:textColor="@color/black_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="15dp"
            android:id="@+id/DetailedInfo"
            app:layout_constraintTop_toBottomOf="@id/selectedMFSHolder"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/MobileNumberHoldBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/MobileNumberHold"
                        style="@style/OutlinedBox_InputTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/MobileNumber"
                            android:inputType="phone"
                            android:maxLength="13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <View
                        android:id="@+id/pickerButton"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/md_transparent"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/pickerIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/pickerIcon"
                        android:layout_width="wrap_content"
                        android:src="@drawable/phone_book_64"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.hbworks.eu.bkashbd.lib.MultiTaskingDropdownSpinner
                    android:id="@+id/receiverType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:label="Type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/MobileNumberHoldBase"
                    app:type="SINGLE_SELECTION" />
                <com.hbworks.eu.bkashbd.lib.MultiTaskingDropdownSpinner
                    android:id="@+id/packagesType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:label="Packages"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/receiverType"
                    app:type="SINGLE_SELECTION" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/SendAmountHoldBase"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/packagesType">
                    <TextView
                        android:text="With Charge"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#1800FF"
                        android:id="@+id/SendAmountChargeType"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/SendAmountHold"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlinedBox_InputTextField"
                        app:layout_constraintStart_toEndOf="@+id/SendAmountChargeType"
                        app:layout_constraintEnd_toStartOf="@+id/SendAmountType"
                        android:layout_width="0dp"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        android:hint="Send Amount">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/SendAmount"
                            android:maxLength="6"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:text="BDT"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#1800FF"
                        android:id="@+id/SendAmountType"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                        android:id="@+id/SendAmountChargeTypeBtt"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#221800FF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/SendAmountChargeType"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <View
                        android:id="@+id/SendAmountTypeBtt"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#221800FF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/SendAmountType"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ReceiveAmountHoldBase"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/SendAmountHoldBase">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ReceiveAmountHold"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlinedBox_InputTextField"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ReceiveAmountType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Received Amount">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ReceiveAmount"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:maxLength="6"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:text="BDT"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#1800FF"
                        android:id="@+id/ReceiveAmountType"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#221800FF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ReceiveAmountType"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ConversionRateHoldBase"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ReceiveAmountHoldBase">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ConversionRateHold"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlinedBox_InputTextField"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ConversionRateCurrencyType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Conversion Rate">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ConversionRate"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:text="SET"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#C1742B"
                        android:id="@+id/ConversionRateSet"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:text="BDT"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#1800FF"
                        android:id="@+id/ConversionRateCurrencyType"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="@+id/ConversionRateSet"/>
                    <View
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#221800FF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ConversionRateCurrencyType"
                        app:layout_constraintEnd_toEndOf="@+id/ConversionRateCurrencyType"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <View
                        android:id="@+id/ConversionRateSetBtn"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#22FF9F43"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ConversionRateSet"
                        app:layout_constraintEnd_toEndOf="@+id/ConversionRateSet"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ServiceChargeHoldBase"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ConversionRateHoldBase">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ServiceChargeHold"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlinedBox_InputTextField"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ServiceChargeCurrencyType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Service Charge">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ServiceCharge"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:text="SET"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#C1742B"
                        android:id="@+id/ServiceChargeSet"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:text="BDT"
                        android:textSize="18dp"
                        android:padding="12dp"
                        android:fontFamily="@font/roboto_medium"
                        app:fontFamily="@font/roboto_medium"
                        android:textColor="#1800FF"
                        android:id="@+id/ServiceChargeCurrencyType"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="@+id/ServiceChargeSet"/>
                    <View
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#221800FF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ServiceChargeCurrencyType"
                        app:layout_constraintEnd_toEndOf="@+id/ServiceChargeCurrencyType"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <View
                        android:id="@+id/ServiceChargeSetBtn"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:background="#22FF9F43"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/ServiceChargeSet"
                        app:layout_constraintEnd_toEndOf="@+id/ServiceChargeSet"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/doRequest"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/corner_bg_10"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ServiceChargeHoldBase" />

                <TextView
                    android:id="@+id/view9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_bold"
                    app:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.07"
                    android:lineSpacingExtra="3sp"
                    android:text="SUBMIT"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/doRequest"
                    app:layout_constraintEnd_toEndOf="@+id/doRequest"
                    app:layout_constraintStart_toStartOf="@+id/doRequest"
                    app:layout_constraintTop_toTopOf="@+id/doRequest" />

                <TextView
                    android:id="@+id/bottomInfo"
                    android:text="Commission: 100/=\nCharge: 200\nReceive: 200/="
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_light"
                    app:fontFamily="@font/roboto_light"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/doRequest"
                    app:layout_constraintTop_toTopOf="@+id/doRequest"
                    app:layout_constraintEnd_toStartOf="@+id/doRequest"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
