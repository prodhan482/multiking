<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="sheetsContentColor">@color/gray_1</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="OutlinedBox_InputTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_box_stroke</item>
        <item name="android:textColorHint">#000000</item>
        <item name="hintTextColor">#0bc0c9</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutlinedBox_InputTextFieldWhiteBg" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_box_stroke</item>
        <item name="android:textColorHint">#000000</item>
        <item name="hintTextColor">#0bc0c9</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="ChipStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
